{
  "name": "jarvis-ai-assistant",
  "version": "1.0.0",
  "description": "Advanced AI Assistant with Voice and File Processing",
  "main": "main.js",
  "author": "JARVIS Team",
  "license": "MIT",
  "homepage": "https://github.com/your-username/jarvis-ai-assistant",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/jarvis-ai-assistant.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.jarvis.ai-assistant",
    "productName": "JARVIS AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "../frontend/dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../config",
        "to": "config",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JARVIS AI Assistant"
    },
    "dmg": {
      "title": "JARVIS AI Assistant ${version}",
      "background": "assets/dmg-background.png",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "jarvis-ai-assistant"
    }
  },
  "keywords": [
    "ai",
    "assistant",
    "voice",
    "file-processing",
    "ollama",
    "chatbot",
    "jarvis",
    "electron"
  ]
}
